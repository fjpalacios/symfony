{% extends 'base.html.twig' %}

{% block body_id "public" %}

{% block body %}
    <div class="container mt-5 page">
        {% for post in posts %}
            {% if post.type == 'page' %}
                <h2 class="h3">
                    {% if app.request.locale == 'es' %}
                        <a href="#">{{ post.titleEs }}</a>
                    {% else %}
                        <a href="#">{{ post.titleEn }}</a>
                    {% endif %}
                </h2>
                <div class="content">
                    {% if app.request.locale == 'es' %}
                        {{ post.contentEs }}
                    {% else %}
                        {{ post.contentEn }}
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
