{% extends 'base.html.twig' %}

{% block title %}
  {{ 'CONTACT_TITLE'|trans }} â€” SargantanaCode
{% endblock %}

{% block body_id "admin" %}

{% block body %}
  <div class="row justify-content-center mt-5 page">
    <div class="col-11 col-sm-9 col-lg-7 col-xl-6">
      <div class="content">
        {% for message in app.session.flashbag().get('status') %}
          <div class="alert alert-info" role="alert">
            {{ message|trans }}
          </div>
        {% endfor %}
        <h2 class="text-center mb-4">{{ 'CONTACT_TITLE'|trans }}</h2>
        {{ form_start(form) }}
        <div class="form-group">
          {{ form_label(form.name, 'NAME') }}
          {{ form_widget(form.name, { 'attr':
            {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.email, 'EMAIL') }}
          {{ form_widget(form.email, { 'attr':
            {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.subject, 'SUBJECT') }}
          {{ form_widget(form.subject, { 'attr':
            {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.message, 'MESSAGE') }}
          {{ form_widget(form.message, { 'attr':
            {'class': 'form-control',
              'rows': 10} }) }}
        </div>
        {{ form_widget(form._token) }}
        <div class="buttons">
          <button type="submit" id="submit" name="submit"
                  class="btn btn-primary">
            <i class="fa fa-send" aria-hidden="true"></i>
            &nbsp; {{ 'SEND_BTN'|trans }}</button>
          <button type="reset" id="submit" name="submit"
                  class="btn">
            <i class="fa fa-eraser" aria-hidden="true"></i>
            &nbsp; {{ 'RESET_BTN'|trans }}</button>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
