{% extends 'base.html.twig' %}

{% block body_id "homepage" %}

{% block body %}
    <div>
        <p>Testing a new page!</p>
    </div>
    <div class="link">
        <p><a href="{{ path('about', {'_locale': app.request.locale }) }}">About</a></p>
    </div>
    <div>
        <ul class="posts">
            {% for post in posts %}
                <li class="posts__item"">{{ post.title }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
