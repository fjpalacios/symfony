{% extends 'base.html.twig' %}

{% block title %}
  {{ 'ADMIN_PAGES_VIEW_TITLE'|trans }} â€” {{ 'TITLE'|trans }}
{% endblock %}

{% block body_id "admin-pages-view" %}

{% block body %}
  <div class="container mt-5 page">
    <h2>
      {% if app.request.locale == 'es' %}
        {{ page.titleEs }}
      {% else %}
        {{ page.titleEn }}
      {% endif %}
    </h2>
    <div class="content">
      {% if app.request.locale == 'es' %}
        {{ page.contentEs|raw|md2html }}
        <div class="mt-5">
          <h3>{{ 'PAGE_EXCERPT'|trans }}</h3>
          {{ page.excerptEs }}
        </div>
      {% else %}
        {{ page.contentEn|raw|md2html }}
        <div class="mt-5">
          <h3>{{ 'PAGE_EXCERPT'|trans }}</h3>
          {{ page.excerptEn }}
        </div>
      {% endif %}
    </div>
    <div class="buttons mt-4">
      <a href="{{ path('admin_pages') }}" class="btn btn-primary">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        &nbsp; {{ 'BACK_BTN'|trans }}</a>
    </div>
  </div>
{% endblock %}
