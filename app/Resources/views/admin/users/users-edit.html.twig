{% extends 'base.html.twig' %}

{% block title %}
  {{ 'ADMIN_USERS_EDIT_TITLE'|trans }} â€” {{ 'TITLE'|trans }}
{% endblock %}

{% block body_id "admin-users-edit" %}

{% block body %}
  <div class="row justify-content-center mt-5 page">
    <div class="col-11 col-sm-8 col-lg-6 col-xl-5">
      {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-info" role="alert">
          {{ message|trans }}
        </div>
      {% endfor %}
      <h2 class="text-center mb-4">
        {{ 'USERS_EDIT_TITLE'|trans }}
      </h2>
      <form name="appbundle_user" method="post">
        <div class="content">
          <div class="form-group">
            {{ form_label(form.username, 'USERNAME') }}
            {{ form_widget(form.username, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.email, 'EMAIL') }}
            {{ form_widget(form.email, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.name, 'NAME') }}
            {{ form_widget(form.name, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.url, 'URL') }}
            {{ form_widget(form.url, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.bio, 'BIO') }}
            {{ form_widget(form.bio, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="form-group">
              {{ form_label(form.roles, 'ROLES') }}
              {{ form_widget(form.roles, { 'attr':
                {'class': 'form-control'} }) }}
            </div>
          {% endif %}
          <div id="passinput">
            {% for passwordField in form.plainPassword %}
              <div class="form-group">
                {% if loop.index == 1 %}
                  {{ form_label(passwordField, 'PASSWORD') }}
                {% else %}
                  {{ form_label(passwordField, 'REPEAT_PASSWORD') }}
                {% endif %}
                {{ form_widget(passwordField, { 'attr':
                  {'class': 'form-control'} }) }}
              </div>
            {% endfor %}
            <div class="buttons">
              <button type="button" id="cancelpass" class="btn btn-danger">
                {{ 'CANCEL_PASSWORD'|trans }}
              </button>
              <button type="button" id="viewpass" class="btn btn-info">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </button>
            </div>
          </div>
          <div id="passbutton">
            <button type="button" id="newpass" class="btn btn-primary mt-3">
              {{ 'GENERATE_NEW_PASSWORD'|trans }}
            </button>
          </div>
          {{ form_widget(form._token) }}
        </div>
        <div class="container buttons mt-5">
          <button type="submit" id="submit" name="submit"
                  class="btn btn-primary">
            <i class="fa fa-check" aria-hidden="true"></i>
            &nbsp; {{ 'EDIT_BTN'|trans }}</button>
          <button type="reset" id="submit" name="submit"
                  class="btn">
            <i class="fa fa-eraser" aria-hidden="true"></i>
            &nbsp; {{ 'RESET_BTN'|trans }}</button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
