<div class="collapse navbar-collapse" id="navbarDropdown">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item
                    {% if app.request.get('_route') == 'admin' %}
                    active
                    {% endif %}">
      <a class="nav-link" href="{{ path('admin',
      {'_locale': app.request.locale }) }}">
        {{ 'ADMIN_PANEL'|trans }}</a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#"
         id="langDropdown" data-toggle="dropdown"
         aria-haspopup="true"
         aria-expanded="false">
        {{ 'ADMIN_POSTS'|trans }}</a>
      <div class="dropdown-menu m-0 rounded-0"
           aria-labelledby="langDropdown">
        <a class="dropdown-item
             {% if app.request.get('_route') == 'admin_posts' %}
             active
             {% endif %}" href="{{ path('admin_posts',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_POSTS'|trans }}</a>
        <a class="dropdown-item
             {% if app.request.get('_route') == 'admin_posts_add' %}
             active
             {% endif %}" href="{{ path('admin_posts_add',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_POSTS_ADD'|trans }}</a>
      </div>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#"
         id="langDropdown" data-toggle="dropdown"
         aria-haspopup="true"
         aria-expanded="false">
        {{ 'ADMIN_PAGES'|trans }}</a>
      <div class="dropdown-menu m-0 rounded-0"
           aria-labelledby="langDropdown">
        <a class="dropdown-item
             {% if app.request.get('_route') == 'admin_pages' %}
             active
             {% endif %}" href="{{ path('admin_pages',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_PAGES'|trans }}</a>
        <a class="dropdown-item
             {% if app.request.get('_route') == 'admin_pages_add' %}
             active
             {% endif %}" href="{{ path('admin_pages_add',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_PAGES_ADD'|trans }}</a>
      </div>
    </li>
  </ul>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#"
         id="langDropdown" data-toggle="dropdown"
         aria-haspopup="true"
         aria-expanded="false">
        {{ 'LANGUAGE'|trans }}</a>
      <div class="dropdown-menu m-0 rounded-0"
           aria-labelledby="langDropdown">
        {% for locale in locales() %}
          <a class="dropdown-item" href="{{ path(
          app.request.get('_route', 'blog_index'),
          app.request.get('_route_params', [])|
          merge({_locale: locale.code})) }}">
            {{ locale.name|capitalize }}
          </a>
        {% endfor %}
      </div>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#"
         id="langDropdown" data-toggle="dropdown"
         aria-haspopup="true"
         aria-expanded="false">
        {{ 'WELCOME'|trans }}, {{ app.user.name }}</a>
      <div class="dropdown-menu dropdown-menu-right
                                m-0 rounded-0"
           aria-labelledby="langDropdown">
        <a class="dropdown-item" href="{{ path('home',
        {'_locale': app.request.locale }) }}">
          {{ 'USER_HOME'|trans }}</a>
        <a class="dropdown-item" href="{{ path('admin_posts_add',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_POSTS_ADD'|trans }}</a>
        <a class="dropdown-item" href="{{ path('admin_pages_add',
        {'_locale': app.request.locale }) }}">
          {{ 'ADMIN_PAGES_ADD'|trans }}</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ path('logout',
        {'_locale': app.request.locale }) }}">
          {{ 'LOGOUT'|trans }}</a>
      </div>
    </li>
  </ul>
</div>
