{% extends 'base.html.twig' %}

{% block title %}
  {{ 'ADMIN_CATEGORIES_ADD_TITLE'|trans }} â€” {{ 'TITLE'|trans }}
{% endblock %}

{% block body_id "admin-categories-add" %}

{% block body %}
  <div class="row justify-content-center page">
    <div class="col-lg-7 mt-5 page">
      {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-info" role="alert">
          {{ message|trans }}
        </div>
      {% endfor %}
      <h2 class="text-center mb-4">
        {{ 'CATEGORIES_ADD_TITLE'|trans }}
      </h2>
      {{ form_start(form,{ 'enctype': "multipart/form-data" }) }}
        <div class="container content">
          <div class="form-group">
            {{ form_label(form.name, 'CATEGORY_NAME') }}
            {{ form_widget(form.name, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.descriptionEs, 'CATEGORY_DESC_ES') }}
            {{ form_widget(form.descriptionEs, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.descriptionEn, 'CATEGORY_DESC_EN') }}
            {{ form_widget(form.descriptionEn, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.image, 'CATEGORY_IMAGE') }}
            {{ form_widget(form.image, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
        </div>
        {{ form_widget(form._token) }}
        <div class="container buttons mt-5">
          <button type="submit" id="submit" name="submit"
                  class="btn btn-primary">
            <i class="fa fa-check" aria-hidden="true"></i>
            &nbsp; {{ 'ADD_BTN'|trans }}</button>
          <button type="reset" id="submit" name="submit"
                  class="btn">
            <i class="fa fa-eraser" aria-hidden="true"></i>
            &nbsp; {{ 'RESET_BTN'|trans }}</button>
        </div>
      {% do form.slug.setRendered %}
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
