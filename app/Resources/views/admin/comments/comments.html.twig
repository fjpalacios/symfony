{% extends 'base.html.twig' %}

{% block title %}
  {{ 'ADMIN_COMMENTS_TITLE'|trans }} â€” SargantanaCode
{% endblock %}

{% block body_id "admin-comments" %}

{% block body %}
  <div class="container mt-5 page">
    <div class="content">
      {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-info" role="alert">
          {{ message|trans }}
        </div>
      {% endfor %}
      <h2 class="text-center mb-4">{{ 'COMMENTS_TITLE'|trans }}</h2>
      {% if comments %}
      <table class="table table-striped">
        <thead>
        <tr>
          <th class="d-none d-sm-table-cell">
            {{ 'COMMENTS_AUTHOR'|trans }}
          </th>
          <th class="w-75">
            {{ 'COMMENTS_COMMENT'|trans }}
          </th>
          <th class="text-center col-sm-2">
            <i class="fa fa-wrench" aria-hidden="true"></i>
          </th>
        </tr>
        </thead>
        <tbody>
        {% endif %}
        {% for comment in comments %}
          {% if comment.status == 'pending' %}
            <tr class="table-danger">
          {% else %}
            <tr>
          {% endif %}
          <td class="d-none d-sm-table-cell">
            {% if comment.url %}
              <a href="{{ comment.url }}">{{ comment.author }}</a>
            {% else %}
              {{ comment.author }}
            {% endif %}
            <br/>
            <a href="{{ 'mailto:' ~ comment.email }}">{{ comment.email }}</a>
            <br/>
            {{ comment.ip }}
          </td>
          <td>
            <a href="{{ path('post', {'slug': comment.slug }) }}">
              {% if app.request.locale == 'es' and comment.title_es %}
                {{ comment.title_es }}
              {% elseif app.request.locale == 'es' and comment.title_en %}
                {{ comment.title_en }}
              {% endif %}
              {% if app.request.locale == 'en' and comment.title_en %}
                {{ comment.title_en }}
              {% elseif app.request.locale == 'en' and comment.title_es %}
                {{ comment.title_es }}
              {% endif %}
            </a>
            <hr/>
            {{ comment.comment }}
          </td>
          <td class="text-center">
            {% if comment.status == 'pending' %}
              <a href="{{ path('admin_comments_del', {'id': comment.id}) }}"
                 class="btn btn-sm btn-primary text-center">
                <i class="fa fa-thumbs-up" aria-hidden="true"></i>
              </a>
              {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="#"
                   class="btn btn-sm btn-danger text-center">
                  <i class="fa fa-thumbs-down"
                     aria-hidden="true"></i>
                </a>
              {% endif %}
            {% else %}
              <a href="{{ path('post', {
                'slug': comment.slug,
                '_fragment': 'comment-' ~ comment.id }) }}"
                 class="btn btn-sm btn-info text-center">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
              <a href="#"
                 class="btn btn-sm btn-primary text-center">
                <i class="fa fa-edit"
                   aria-hidden="true"></i>
              </a>
              {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('admin_comments_del', {'id': comment.id}) }}"
                   class="btn btn-sm btn-danger text-center">
                  <i class="fa fa-remove"
                     aria-hidden="true"></i>
                </a>
              {% endif %}
            {% endif %}
          </td>
          </tr>
        {% endfor %}
        {% if not comments %}
        <div class="alert alert-danger" role="alert">
          {{ 'COMMENTS_NOT_FOUND'|trans }}
        </div>
        {% else %}
        </tbody>
      </table>
      {% endif %}
    </div>
  </div>
{% endblock %}
