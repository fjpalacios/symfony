{% extends 'base.html.twig' %}

{% block title %}
  {{ 'ADMIN_COMMENTS_EDIT_TITLE'|trans }} â€” {{ 'TITLE'|trans }}
{% endblock %}

{% block body_id "admin-comments-edit" %}

{% block body %}
  <div class="row justify-content-center page">
    <div class="col-lg-7 mt-5 page">
      {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-info" role="alert">
          {{ message|trans }}
        </div>
      {% endfor %}
      <h2 class="text-center mb-4">
        {{ 'COMMENTS_EDIT_TITLE'|trans }}
      </h2>
      {{ form_start(form) }}
        <div class="container content">
          <div class="form-group">
            {{ form_label(form.author, 'COMMENT_AUTHOR') }}
            {{ form_widget(form.author, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.email, 'COMMENT_EMAIL') }}
            {{ form_widget(form.email, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.url, 'COMMENT_URL') }}
            {{ form_widget(form.url, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.comment, 'COMMENT_COMMENT') }}
            {{ form_widget(form.comment, { 'attr':
              {'class': 'form-control', 'rows': 10} }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.status, 'COMMENT_STATUS') }}
            {{ form_widget(form.status, { 'attr':
              {'class': 'form-control'} }) }}
          </div>
        </div>
        {{ form_widget(form._token) }}
        <div class="container buttons mt-5">
          <button type="submit" id="submit" name="submit"
                  class="btn btn-primary">
            <i class="fa fa-check" aria-hidden="true"></i>
            &nbsp; {{ 'EDIT_BTN'|trans }}</button>
          <button type="reset" id="submit" name="submit"
                  class="btn">
            <i class="fa fa-eraser" aria-hidden="true"></i>
            &nbsp; {{ 'RESET_BTN'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
