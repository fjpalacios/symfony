{% extends 'base.html.twig' %}

{% block body_id "admin" %}

{% block body %}
    <div class="container mt-5 content--login page">
        {% for message in app.session.flashbag().get('status') %}
            <div class="alert alert-info" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
        <h2 class="text-center h2 mb-4">{{ 'ADDUSER_TITLE'|trans }}</h2>
        <form name="appbundle_user" method="post">
            <div class="form-group">
                {{ form_label(form.username, 'USERNAME') }}
                {{ form_widget(form.username, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'EMAIL') }}
                {{ form_widget(form.email, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            {% for passwordField in form.plainPassword %}
                <div class="form-group">
                    {% if loop.index == 1 %}
                        {{ form_label(passwordField, 'PASSWORD') }}
                    {% else %}
                        {{ form_label(passwordField, 'REPEAT_PASSWORD') }}
                    {% endif %}
                    {{ form_widget(passwordField, { 'attr':
                        {'class': 'form-control'} }) }}
                </div>
            {% endfor %}
            <div class="form-group">
                {{ form_label(form.name, 'NAME') }}
                {{ form_widget(form.name, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.url, 'URL') }}
                {{ form_widget(form.url, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.bio, 'BIO') }}
                {{ form_widget(form.bio, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.roles, 'ROLES') }}
                {{ form_widget(form.roles, { 'attr':
                    {'class': 'form-control'} }) }}
            </div>
            {{ form_widget(form._token) }}
            <div class="buttons">
                <button type="submit" id="submit" name="submit"
                        class="btn btn-primary">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    &nbsp; {{ 'ADD_BTN'|trans }}</button>
                <button type="reset" id="submit" name="submit"
                        class="btn">
                    <i class="fa fa-eraser" aria-hidden="true"></i>
                    &nbsp; {{ 'RESET_BTN'|trans }}</button>
            </div>
        </form>
    </div>
{% endblock %}
