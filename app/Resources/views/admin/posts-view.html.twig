{% extends 'base.html.twig' %}

{% block body_id "admin-posts-view" %}

{% block body %}
    <div class="container mt-5 page">
        <h2>
            {% if app.request.locale == 'es' %}
                {{ post.titleEs }}
            {% else %}
                {{ post.titleEn }}
            {% endif %}
        </h2>
        <div class="content">
            {% if app.request.locale == 'es' %}
                {{ post.contentEs|raw|md2html }}
                <div class="mt-5">
                    <h3>{{ 'POST_EXCERPT'|trans }}</h3>
                    {{ post.excerptEs }}
                </div>
            {% else %}
                {{ post.contentEn|raw|md2html }}
                <div class="mt-5">
                    <h3>{{ 'POST_EXCERPT'|trans }}</h3>
                    {{ post.excerptEn }}
                </div>
            {% endif %}
        </div>
        {% if author.bio %}
            <div class="content mt-4 author">
                <div class="author__avatar">
                    <img src="{{ gravatar( author.email ) }}"
                         alt="{{ author.name }}"/>
                </div>
                <div class="author__bio">
                    <h2>{{ author.name }}</h2>
                    {{ author.bio|raw|md2html }}
                </div>
            </div>
        {% endif %}
        <div class="buttons mt-4">
            <a href="{{ path('admin_posts') }}" class="btn btn-primary">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                &nbsp; {{ 'BACK_BTN'|trans }}</a>
        </div>
    </div>
{% endblock %}
